{
    "name": "ant-design-plus",
    "version": "1.0.0",
    "description": "A React component library based on Ant Design",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --filter @ant-design-plus/docs dev",
        "build": "pnpm --filter @ant-design-plus/ui build",
        "build:docs": "pnpm --filter @ant-design-plus/docs build",
        "build:all": "pnpm build && pnpm build:docs",
        "preview:docs": "pnpm --filter @ant-design-plus/docs preview",
        "lint": "eslint packages --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint packages --ext .ts,.tsx,.js,.jsx --fix",
        "type-check": "tsc --noEmit",
        "clean": "rimraf packages/*/dist packages/*/node_modules",
        "publish:components": "pnpm --filter @ant-design-plus/ui publish",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "pnpm build && changeset publish",
        "prepare": "husky",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
        "@ant-design/icons": "^6.0.1",
        "antd": "^5.27.3",
        "classnames": "^2.5.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router-dom": "^7.8.2",
        "styled-components": "^6.1.19",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@types/node": "^20.11.24",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@types/styled-components": "^5.1.34",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "@vitejs/plugin-react": "^5.0.2",
        "eslint": "^9.35.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^9.0.11",
        "rimraf": "^5.0.5",
        "sass": "^1.71.1",
        "typescript": "^5.2.2",
        "vite": "^7.1.5"
    },
    "packageManager": "pnpm@8.12.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fucktic/ant-design-plus.git"
    },
    "keywords": [
        "react",
        "components",
        "antd",
        "ui",
        "typescript"
    ],
    "author": "Your Name",
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ],
        "*.{css,scss,md,json,yml,yaml}": [
            "prettier --write"
        ]
    },
    "type": "module"
}
